<h1><%= @room.name %></h1>

<h4>参加者</h4>
<% @entries.each do |e| %>
  <%= link_to e.user.name, user_path(e.user_id) %>
<% end %>

<h1>Chat room</h1>
<form>
  <label>Say something:</label><br>
  <input type="text" id="chat-input" data-behavior="room_speaker">
</form>

<div id="messages" data-room_id="<%= @room.id %>">
  <%= render @messages %><!-- 繰り返し処理 -->
  <!-- <%# render partial: 'messages/message', collection: @messages %>と同じ -->
</div>